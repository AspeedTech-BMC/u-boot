/dts-v1/;
/include/ "pilot.dtsi"

/ {
	compatible = "aspeed,pilot";

	memory {
		device_type = "memory";
		reg = <0x9F700000 0x800000>;
	};

	aliases {
		serial0 = &uart0;
		spi0= &bootspi;
	};

};

&bootspi {
	bus-num = <0>;
	status = "okay";
	spi-flash@0{
		compatible = "spi-flash";
		reg = <0>;
		spi-max-frequency = <50000000>; /* input clock */
	};
	spi-flash@1{
		compatible = "spi-flash";
		reg = <1>;
		spi-max-frequency = <50000000>; /* input clock */
	};
};

